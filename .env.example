# Credenciales de Telegram
TG_APP_ID=your_app_id_here
TG_API_HASH=your_api_hash_here
TG_PHONE=+1234567890

# Optional: session path
TG_SESSION_PATH=

# Configuración de Telegram
TELEGRAM_GROUP_NAME=chat_name_here

# Chat objetivo para monitorear (OPCIONAL - se puede seleccionar dinámicamente en el dashboard)
# Formato: chat-<ID_NUMERICO> o username (sin corchetes)
# Ejemplo: chat-1234567890 ó  @mi_grupo
# Ejemplo: TARGET_CHAT=chat-1234567890

# Configuración del Agente
CHECK_INTERVAL=300
LAST_CHECK_FILE=data/last_check.txt

# Configuración de Base de Datos
DATABASE_PATH=data/posts.db

# Configuración del Backend
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False

# API de Generación de Imágenes (opcional)
# Descomenta y configura según el servicio que uses
# IMAGE_API_KEY=tu_api_key_aqui
# IMAGE_API_URL=https://api.openai.com/v1/images/generations
# IMAGE_SERVICE=openai  # openai, stability, dalle, etc.

# Configuración de Scraping
REQUEST_TIMEOUT=10
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36